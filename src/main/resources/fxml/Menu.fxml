<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="menuPane" styleClass="menu-pane" stylesheets="@../css/design.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <FlowPane alignment="CENTER" columnHalignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" orientation="VERTICAL" prefHeight="400.0" prefWidth="722.0" prefWrapLength="0.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onContinueButton" prefHeight="42.0" prefWidth="150.0" styleClass="btn-normal" text="Continue">
               <font>
                  <Font name="MedievalSharp" size="22.0" />
               </font>
               <FlowPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="380.0" />
               </FlowPane.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#onStartButton" prefHeight="42.0" prefWidth="200.0" styleClass="btn-normal" text="New Game">
               <font>
                  <Font name="MedievalSharp" size="22.0" />
               </font>
               <FlowPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </FlowPane.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#onQuitButton" prefHeight="42.0" prefWidth="100.0" styleClass="btn-normal" text="Quit">
               <font>
                  <Font name="MedievalSharp" size="22.0" />
               </font>
               <FlowPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </FlowPane.margin>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </FlowPane>
   </center>
   <left>
      <Slider fx:id="volumeSlider" max="100" maxHeight="-Infinity" min="0" onMouseDragged="#onVolumeChange" orientation="VERTICAL" prefHeight="300.0" value="50" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="30.0" left="10.0" top="30.0" />
         </BorderPane.margin>
      </Slider>
   </left>
</BorderPane>
